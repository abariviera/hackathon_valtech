{
  "extends": [
    "plugin:vue/base",
    "eslint:recommended",
    "prettier/vue",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "linebreak-style": "off",
    "no-undef": "off",
    "import/no-extraneous-dependencies": "off",
    "no-restricted-syntax": "off",
    "func-names": "off",
    "arrow-parens": 0,
    "brace-style": 0,
    "comma-dangle": 0,
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "no-mixed-operators": 0,
    "no-use-before-define": 0,
    "no-floating-decimal": 1,
    "class-methods-use-this": 0,
    "import/first": 0,
    "import/prefer-default-export": 0,
    "vue/jsx-uses-vars": 2,
    "max-len": 0,
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "endOfLine":"auto",
    "prettier/prettier": ["warn"]
  }
}
