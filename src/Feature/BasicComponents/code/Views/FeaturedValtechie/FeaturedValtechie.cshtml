@using Glass.Mapper.Sc.Web.Mvc
@model OneValtech.Feature.BasicComponents.Models.FeaturedValtechie.IFeaturedValtechie

<section class="featured-profile">
    <h1 class="featured-profile__heading">@Html.Glass().Editable(title => Model.Title)</h1>
    <img src="https://i.imgur.com/7xdfsat.png" alt="Bruno Freitas Photo">
    <div class="featured-profile__info">

        <h2 class="featured-profile__user">Bruno Freitas</h2>
        <div class="featured-profile__praiseArea">
            <p class="featured-profile__praiseCounter">30</p>
            <svg class="heart-icon" width="27" height="24" viewBox="0 0 74 68" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M55.5 0L37 12.3636L18.5 0L0 15.4545V37.0909L37 68L74 37.0909V15.4545L55.5 0Z" fill="#2F1160" />
            </svg>
        </div>

        <p class="featured-profile__comment">
            Thank you so much, If wasn't for you I couldn't deliver this project in time!!! Kudos
        </p>
        <p class="featured-profile__commentAuthor">Lucas.Trebien</p>
    </div>
</section>